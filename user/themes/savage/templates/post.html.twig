{% extends 'partials/base.html.twig' %}

{% block content %}
  <div class="row">
    <div class="col-xs-12">
      <div class="post__header">
        <div class="post__title">
          <h1>{{ page.title }}</h1>
          <p>
            By <strong>An Adult</strong> &#8212; in
            {% for tag in page.taxonomy.tag %}
              <span class="label"><a href="{{ base_url_absolute }}/tag:{{ tag }}" data-toggle="tooltip" title="Posts tagged with {{ tag }}" rel="tag">{{ tag }}</a></span>
            {% endfor %}
            <strong><time datetime="{{ page.date | date(site.date_long) }}">{{ page.date | date("d M Y") }}</time></strong>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

      {% if header.summary %}
        <div class="post__summarywrap">
          <a class="post__summarytoggle collapsed" data-toggle="collapse" href="#post__summary" aria-expanded="false" aria-controls="post__summary">
            <i class="fa fa-plus" aria-hidden="true"></i>
            <i class="fa fa-minus" aria-hidden="true"></i>
            SPOILER ALERT
          </a>
          <div class="post__summary collapse" id="post__summary">
            <p>If you're literally 9 and too lazy to read this post, then here's a summary.</p>
            <ul>
              {% for point in header.summary %}
                <li>{{ point }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>

      {% endif %}

      <div class="post__content">
        {{ page.content }}
      </div>
    </div>
  </div>
{% endblock %}
