{% extends 'partials/base.html.twig' %}
{% set collection = page.collection() %}

{% block banner %}
    <div class="col-xs-12">
        <h1>{{ site.title }}</h1>
        {% if page.collection.params.taxonomies %}
            <h2>Tagged with "{{ page.collection.params.taxonomies.tag.0 }}"</h2>
        {% else %}
            <h2>{{ site.description }}</h2>
        {% endif %}

    </div>
{% endblock %}

{% block content %}
    {{ page.content }}

    <div class="teasers">
        {% for post in collection %}
            {% include 'partials/teaser.html.twig' %}
        {% endfor %}
    </div>

    {% if config.plugins.pagination.enabled and collection.params.pagination %}
        {% include 'partials/pagination.html.twig' with {'pagination':collection.params.pagination} %}
    {% endif %}
{% endblock %}
